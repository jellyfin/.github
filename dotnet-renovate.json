{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with Jellyfin's .Net repos",
  "extends": ["github>jellyfin/.github"],
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "labels": ["nuget"]
    },
    {
      "matchDepTypes": ["nuget"],
      "groupName": ".Net dependencies",
      "groupSlug": "dotnet-deps",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
